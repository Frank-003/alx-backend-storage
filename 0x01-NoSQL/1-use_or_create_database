#!/usr/bin/env python3
from pymongo import MongoClient

# Replace the URI string with your MongoDB deployment's connection string.
client = MongoClient("mongodb://localhost:27017/")

# Create or use a database named 'my_db'
db = client["my_db"]

# Create or use a collection named 'my_collection' within 'my_db'
collection = db["my_collection"]

# Insert a sample document into the collection to verify everything is working
sample_document = {"name": "Sample Document", "value": 1}
result = collection.insert_one(sample_document)

# Print the ID of the inserted document
print(f"Document inserted with ID: {result.inserted_id}")

# Verify the database and collection were created or used by listing them
print("Databases:", client.list_database_names())
print("Collections in 'my_db':", db.list_collection_names())

